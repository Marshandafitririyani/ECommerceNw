<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/blue_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_50</item>
        <item name="colorSecondaryVariant">@color/blue_50</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/read</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_100</item>
        <item name="android:navigationBarColor">@color/blue_20</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ECommerce.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>